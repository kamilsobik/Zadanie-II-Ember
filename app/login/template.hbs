{{page-title 'Login'}}

<div class='container'>
  <form {{on 'submit' this.onSubmit}}>
    <div class='mb-3 row'>
      <label for='username' class='col-sm-2 col-form-label'>Username</label>
      <div class='col-sm-10'>
        <input
          type='text'
          class='form-control'
          id='username'
          placeholder='username'
          {{on 'input' this.onLoginChange}}
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <label
        for='inputPassword'
        class='col-sm-2 col-form-label'
      >Password</label>
      <div class='col-sm-10'>
        <input
          type='password'
          class='form-control'
          id='inputPassword'
          placeholder='password'
          {{on 'input' this.onPasswordChange}}
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <button type='submit' class='btn btn-primary'>Zaloguj</button>
    </div>
  </form>
  <div>
    <span>Nie mam konta. </span><LinkTo @route='register'>Zarejestruj</LinkTo>
  </div>

  <div class='mb-3 row'>

    <button
      type='button'
      class='btn btn-primary'
      {{on 'click' this.on0AuthLoginOrRegister}}
    >Zaloguj przez konto google</button>
  </div>

</div>
{{outlet}}