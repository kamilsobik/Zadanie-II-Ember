<div class='card mx-auto' style='width: 18rem;'>
  <img src={{@user.photoURL}} class='card-img-top' alt='owner' />
  <div class='card-body'>
    <h5 class='card-title' data-test-username>{{@user.username}}</h5>
  </div>
  <ul class='list-group list-group-flush'>
    <li class='list-group-item' data-test-id>{{@user.id}}</li>
    <li class='list-group-item' data-test-email>{{@user.email}}</li>
    <li class='list-group-item' data-test-password>{{@user.password}}</li>
  </ul>
  <div class='card-body'>
    <a href='#' class='card-link'>Card link</a>
    <a href='#' class='card-link'>Another link</a>
  </div>
</div>
<Posts::List @posts={{@user.posts}} />